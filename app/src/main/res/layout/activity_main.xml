<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/id_ZipCode"
        android:layout_width="413dp"
        android:layout_height="92dp"
        android:layout_marginTop="93dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/id_imageWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="296dp"
        android:layout_marginTop="392dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_DateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="24dp"
        android:text="Date and Time: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_Location" />

    <TextView
        android:id="@+id/id_Location"
        android:layout_width="211dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Location,"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_ZipCode" />

    <TextView
        android:id="@+id/id_Temperature"
        android:layout_width="130dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="348dp"
        android:text="Temperature:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_feelsLike"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="136dp"
        android:text=" "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_DateTime" />

    <TextView
        android:id="@+id/id_enterZipCodeInstruct"
        android:layout_width="196dp"
        android:layout_height="60dp"
        android:text="Enter ZipCode: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="81dp"
        android:text="Weather"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_ZipCode" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:text="Feels Like: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_button" />

    <TextView
        android:id="@+id/id_displayTemp"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_DateTime" />

    <TextView
        android:id="@+id/id_displayCountry"
        android:layout_width="117dp"
        android:layout_height="38dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="200dp"
        android:text="Country"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_description"
        android:layout_width="114dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="508dp"
        android:text="Description: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_viewDesc"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="500dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/id_discreteSeek"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="376dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="592dp"
        android:max="10"
        android:progress="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>